{
    "name": "zappit",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/Zappit-App/website"
    },
    "engines": {
        "node": "18.12.1"
    },
    "private": true,
    "scripts": {
        "build": "npm-run-all build:*",
        "build:server": "tsc -p ./server/tsconfig.json",
        "build:client": "next build",
        "lint": "npm-run-all lint:*",
        "lint:css": "stylelint '**/*.scss' --fix",
        "lint:client": "next lint",
        "lint:source": "npx eslint . --ext .js,.jsx,.ts,.tsx",
        "verify": "tsc --project ./server/tsconfig.json --noEmit",
        "pre-commit": "npm run lint && npm run verify",
        "dev": "nodemon --config ./nodemon.json ./server/index.ts --dev true",
        "production": "npm-run-all production:*",
        "production:clean": "rm -rf ./build/*",
        "production:build": "npm run build",
        "production:copy-files": "cp -r ./public ./build/ && cp -r ./shared ./build/",
        "production:run-server": "node ./build/server/index.js --dev false",
        "test": "echo No tests for now",
        "test:e2e": "cypress run",
        "test:e2e:gui": "cypress open",
        "prepare": "husky install"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.9.1",
        "@types/socket.io": "^3.0.2",
        "axios": "^1.1.3",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.20.0",
        "bootstrap": "^5.2.2",
        "compression": "^1.7.4",
        "connect-mongo": "^4.6.0",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.3",
        "express-rate-limit": "^6.6.0",
        "express-session": "^1.17.3",
        "express-sharp": "^4.2.41",
        "express-subdomain": "^1.0.5",
        "framer-motion": "^7.6.1",
        "helmet": "^6.0.0",
        "locale": "^0.1.0",
        "mkdirp": "^1.0.4",
        "mongoose": "^6.6.5",
        "ms": "^2.1.3",
        "multer": "^1.4.5-lts.1",
        "next": "12.3.1",
        "nodemailer": "^6.8.0",
        "nodemon": "^2.0.20",
        "npm-run-all": "^4.1.5",
        "passport": "^0.6.0",
        "passport-local-mongoose": "^7.1.2",
        "qrcode": "^1.5.1",
        "react": "18.2.0",
        "react-bootstrap": "^2.5.0",
        "react-dom": "18.2.0",
        "react-redux": "^8.0.5",
        "react-tsparticles": "^2.3.3",
        "redis": "^4.3.1",
        "redux-persist": "^6.0.0",
        "remove": "^0.1.5",
        "sass": "^1.55.0",
        "serve-favicon": "^2.5.0",
        "socket.io-client": "^4.5.3",
        "speakeasy": "^2.0.0",
        "tsparticles": "^2.3.4",
        "uuid": "^9.0.0",
        "validator": "^13.7.0",
        "zod": "^3.19.1"
    },
    "devDependencies": {
        "@redux-devtools/core": "^3.13.1",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cypress": "^1.1.3",
        "@types/express": "^4.17.14",
        "@types/express-session": "^1.17.5",
        "@types/locale": "^0.1.1",
        "@types/minimist": "^1.2.2",
        "@types/mkdirp": "^1.0.2",
        "@types/ms": "^0.7.31",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.8.2",
        "@types/nodemailer": "^6.4.6",
        "@types/passport": "^1.0.11",
        "@types/passport-local": "^1.0.34",
        "@types/qrcode": "^1.5.0",
        "@types/react": "18.0.21",
